#include <iostream>
#include <vector>
#include <string>
using namespace std;

struct Usuario {
    int idUsuario;
    string nombre;
    string correoElectronico;
    string contrasena;
    string direccion;
    string metodoDePago;
};

struct Producto {
    int idProducto;
    string nombre;
    string descripcion;
    double precio;
    int stock;
};

struct Comentario {
    int idComentario;
    string producto;  
    string usuario;   
    string comentario;
    string fecha;
};

struct CarritoDeCompras {
    int idCarrito;
    Usuario usuario;
    vector<Producto> productos;
    double subtotal;
    double impuestos;
};






// ================== PROTOTIPOS DE FUNCIONES ==================

// Inicializa los vectores con los datos del parcial
void inicializarDatos(vector<Usuario> &usuarios, vector<Producto> &productos, vector<Comentario> &comentarios);

// Inicia sesión y devuelve un puntero al usuario si las credenciales son válidas
Usuario* iniciarSesion(vector<Usuario> &usuarios);

// Muestra el menú principal con las opciones del sistema
void mostrarMenu(Usuario &usuario, vector<Usuario> &usuarios, vector<Producto> &productos,
                 vector<Comentario> &comentarios, vector<CarritoDeCompras> &carritos);

// Lista todos los productos con stock menor a 15 unidades
void listarProductosBajoStock(const vector<Producto> &productos);

// Lista todos los usuarios (sin mostrar contraseña, en mayúsculas)
void listarUsuarios(const vector<Usuario> &usuarios);

// Muestra los comentarios realizados desde una fecha en adelante
void listarComentariosDesdeFecha(const vector<Comentario> &comentarios, const string &fechaInicio);

// Genera un nuevo ID incremental para el vector de carritos
int generarNuevoIdCarrito(const vector<CarritoDeCompras> &carritos);

// Permite agregar productos al carrito del usuario y descuenta stock
void agregarAlCarrito(vector<CarritoDeCompras> &carritos, vector<Producto> &productos, Usuario &usuario);

// Muestra los productos contenidos en el carrito del usuario actual
void listarCarrito(const vector<CarritoDeCompras> &carritos, const Usuario &usuario);





